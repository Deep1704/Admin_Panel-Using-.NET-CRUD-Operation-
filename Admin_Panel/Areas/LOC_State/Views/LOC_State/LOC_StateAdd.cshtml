        <label for="staticEmail" class="col-sm-2 col-form-label">State Name</label>
        <div class="col-xl-4">
            <input type="text" asp-for="StateName"   class="form-control">
                <span class="text-danger" asp-validation-for="StateName"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label">State Code</label>
