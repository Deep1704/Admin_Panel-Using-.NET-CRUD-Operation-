@using Admin_Panel.Areas.LOC_Country.Models
@model LOC_CountryModel
@{
    Layout = "~/Views/shared/_Layout.cshtml";
}

<form method="post" asp-controller="LOC_Country" asp-action="Save">
    @Html.HiddenFor(x=>x.CountryID)
<div class="d-flex flex-column">
    <div class="mt-3 mb-3">
        <h2>Add / Update Page</h2>
    </div>
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Country Name</label>
        <div class="col-xl-4">
            <input type="text" asp-for="CountryName" class="form-control">
            <span class="text-danger" asp-validation-for="CountryName"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Country Code</label>
        <div class="col-xl-4">
            <input type="text" asp-for="CountryCode" class="form-control" id="inputPassword">
            <span class="text-danger" asp-validation-for="CountryCode"></span>
        </div>
    </div>
    <div>
        <button class="btn btn-success" type="submit">Add</button>
    </div>
</div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }