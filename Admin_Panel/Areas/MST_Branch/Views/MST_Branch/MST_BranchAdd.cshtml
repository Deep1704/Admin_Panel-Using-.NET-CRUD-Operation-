@{
    Layout = "~/Views/shared/_Layout.cshtml";
}
@using Admin_Panel.Areas.MST_Branch.Models
@model MST_BranchModel

<form method="post" asp-controller="MST_Branch" asp-action="Save">
    @Html.HiddenFor(x=>x.BranchID)
    <div class="d-flex flex-column">
        <div class="mt-3 mb-3">
            <h2>Add / Update Page</h2>
        </div>
        <div class="mb-3 row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Branch Name</label>
            <div class="col-xl-4">
                <input type="text" asp-for="BranchName" class="form-control">
                <span class="text-danger" asp-validation-for="BranchName"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Branch Code</label>
            <div class="col-xl-4">
                <input type="text" asp-for="BranchCode" class="form-control" id="inputPassword">
                <span class="text-danger" asp-validation-for="BranchCode"></span>
            </div>
        </div>
        <div>
            <button class="btn btn-success" type="submit">Add</button>
        </div>
    </div>
</form>
